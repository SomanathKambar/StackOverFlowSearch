<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.somanath.stackoverflowsearch.data.model.Item" />
    </data>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/title_label"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="@id/titleLabel"
            app:layout_constraintStart_toEndOf="@id/titleLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.title, default=`Some Data`}"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/authorNameLabel"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/author_label"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/authorName"
            app:layout_constraintTop_toTopOf="@id/authorNameLabel"
            app:layout_constraintStart_toEndOf="@id/authorNameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.owner.display_name, default=`Some Data`}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/creationDateLabel"
            app:layout_constraintTop_toBottomOf="@+id/authorNameLabel"
            app:layout_constraintStart_toStartOf="@id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/created_at_label"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/creationDate"
            app:layout_constraintTop_toTopOf="@id/creationDateLabel"
            app:layout_constraintStart_toEndOf="@id/creationDateLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:date="@{item}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/linkLabel"
            app:layout_constraintTop_toBottomOf="@id/creationDate"
            app:layout_constraintStart_toStartOf="@id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/link_label" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/link"
            app:layout_constraintTop_toTopOf="@id/linkLabel"
            app:layout_constraintStart_toEndOf="@id/linkLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{item.link.toString()}" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>